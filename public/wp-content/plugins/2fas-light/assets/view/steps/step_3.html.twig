<div class="twofas-light-card">
    <div class="twofas-light-card-step">
        <div class="twofas-light-card-step-box">
            <h6>Step</h6>
            <span class="twofas-light-card-step-number">3</span>
        </div>
    </div>

    <p class="twofas-light-card-description totp-token-desc">
        <span class="twofas-light-text-line">Enter 6-digit token generated by the app and click "Add device" button</span>
        <span class="twofas-light-text-line">to finish configuration.</span>
    </p>

    <div class="twofas-light-card-totp-token">
        <form action="{{ create_url(constant('TwoFAS\\Light\\Http\\Action_Index::TWOFAS_LIGHT_ADMIN_PAGE_SLUG'), constant('TwoFAS\\Light\\Http\\Action_Index::TWOFAS_ACTION_CONFIGURE_TOTP')) }}" method="post" class="twofas-light-totp-form js-twofas-light-totp-form">
            {{ create_form_nonce(constant('TwoFAS\\Light\\Http\\Action_Index::TWOFAS_ACTION_CONFIGURE_TOTP')) | raw }}
            <label for="twofas-light-totp-token">Token:</label>
            <input id="twofas-light-totp-token"
                   name="twofas-light[totp-token]"
                   type="text"
                   autocomplete="off"
                   minlength="6"
                   maxlength="6"
                   required="required"
                   pattern="\d{6}"
                   title="Six digits"
                   placeholder="" />
            <input type="submit" class="button button-primary js-twofas-light-totp-submit" value="Add device" />
            <input class="js-twofas-light-totp-secret-input" name="twofas-light[totp-secret]" type="hidden" value="{{ totp_secret }}" />
        </form>
    </div>
</div>
